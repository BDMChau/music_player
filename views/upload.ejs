<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport"
    content="user-scalable=no, initial-scale=1, maximum-scale=0.5, minimum-scale=0.5, width=device-width" />
  <title>List Upload</title>
  <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/upload.css">
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="form-box" style="z-index: 10;">
        <form action="/" method="POST" enctype="multipart/form-data">
          <div class="form-upload">
          <input type="file" name="file" multiple required>
          <p>Drag files or click here!</p>
          <h6>3 files at once</h6>
        </div>
          <button type="submit" class="btn-Submit">Upload</button>
        </form>
      </div>
      <div class="list-box">
        <div class="list-track">
          <table class="table table-striped">
            <thead>
              <tr>          
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Artist</th>
                <th scope="col">Album</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% if(locals.metaDataArr){ %>
              <% metaDataArr.forEach((data) => { %>
              <tr>
                <th scope="row"><a href="<%= data.id %>" target="_blank"> <%= data.id %> </a></th>
                <td><a href="<%= data.id %>" target="_blank"> <%= data.title %> </a></td>
                <td><a href="<%= data.id %>" target="_blank"> <%= data.artist %> </a></td>
                <td><a href="<%= data.id %>" target="_blank"> <%= data.album %> </a></td>
              </tr>
              <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <a class="btn-Remove" href="/" ><button>Remove All</button></a>
    </div>
  </div>

  <!-- /////////////////// -->
  <script src="/js/upload.js"></script>
</body>

</html>